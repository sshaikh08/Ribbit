<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AuthBackground"
    tools:context="com.example.shariq.ribbit.ui.SignUpActivity">
    <ImageView
        style="@style/AuthBackgroundImage"
        android:contentDescription="@string/content_desc_background_image"
        android:id="@+id/backgroundImage"/>

    <TextView
        style="@style/AuthTitle"
        android:id="@+id/title"
        android:layout_marginTop="180dp"/>

    <TextView
        style="@style/AuthTitle.AuthSubTitle"
        android:id="@+id/subtitle"/>


    <LinearLayout
        style="@style/AuthFieldContainer"
        android:id="@+id/editTextLayout"
        android:layout_width="400dp"
        android:layout_centerHorizontal="true">


    <EditText
        style="@style/AuthEditText"
        android:id="@+id/usernameField"
        android:hint="@string/username_hint">

    <requestFocus/>

</EditText>

    <EditText
        style="@style/AuthEditText"
        android:id="@+id/passwordField"
        android:hint="@string/password_hint"
        android:inputType="textPassword"/>

    <EditText
        style="@style/AuthEditText"
        android:id="@+id/emailField"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"/>

</LinearLayout>

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="@string/content_desc_button_divider"
        android:id="@+id/buttonDivider"
        android:src="@drawable/button_divider"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/editTextLayout"/>

    <Button
        style="@style/AuthButton"
        android:id="@+id/signupButton"
        android:layout_below="@+id/editTextLayout"
        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@id/buttonDivider"
        android:layout_alignLeft="@id/editTextLayout"
        android:text="@string/sign_up_button_label"
        android:layout_marginLeft="0dp"/>

    <Button
        style="@style/AuthButton"
        android:id="@+id/cancelButton"
        android:layout_below="@+id/editTextLayout"
        android:text="@string/cancel_button_label"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/buttonDivider"
        android:layout_alignRight="@id/editTextLayout"
        android:layout_marginRight="0dp"/>
</RelativeLayout>
